<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" >
        <shape android:shape="rectangle">
            <solid android:color="#FFF"/>
            <stroke android:width="5px" android:color="#0000ff" android:dashWidth="3dp" android:dashGap="5px"/>
        </shape>
    </item>


    <item android:state_pressed="true">
        <shape android:shape="rectangle" android:tint="@color/colorAccent">
            <solid android:color="#FFF"/>
            <stroke android:width="5px" android:color="#0000ff" android:dashWidth="5dp" android:dashGap="5px"/>
        </shape>
    </item>
</selector>